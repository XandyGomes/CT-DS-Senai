programa {
  funcao inicio() {

    //declaração de variáveis
    real n1, n2, media

    //entradas
    escreva ("Digite a primeira nota: ")
    leia (n1)
    escreva ("Digite a segunda nota: ")
    leia (n2)

    //processamento
    media = (n1+n2)/2

    //saída
    escreva ("A media é: ", media)
    
  }
}

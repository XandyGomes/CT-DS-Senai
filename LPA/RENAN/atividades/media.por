programa {
  funcao inicio() {
    //Declaração de varáveis
    real nota1, nota2, resultado
    
    //Entrada de dados
    escreva("Digite a primeira e a segunda nota do aluno: ")
    leia(nota1, nota2)

    //Processamento
    resultado = (nota1 + nota2) / 2

    //Saída de dados
    escreva("A média do aluno é: ", resultado)
    
  }
}

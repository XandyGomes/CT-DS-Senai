programa {
  funcao inicio() 
  {
    //declaração de variáveis 
    real nota1, nota2, media

    //entradas
    escreva("Digite a primeira nota: ")
    leia(nota1)
    escreva("Digite a segunda nota: ")
    leia(nota2)

    //processamento 
    media = (nota1+nota2)/2

    //saída
    escreva("A média é: ", media)
    
  }
}

programa {
  funcao inicio() {
  //exercicio 2
  real v1, v2, v3, tempo, media
  escreva ("Tempo da 1ºVolta ")
  leia (v1)
  escreva ("Tempo da 2ºVolta ")
  leia (v2)
  escreva ("Tempo da 3ºVolta ")
  leia (v3)

  tempo = (v1+v2+v3)
  escreva ("Valor do tempo: ", tempo)

  media = (tempo/3)
  escreva ("\nTempo media: ", media)
  }
}

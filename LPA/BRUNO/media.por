programa {
  funcao inicio() {
    //declaração de variáveis
    real num1, num2, media
    //entrada
      escreva("Digite a primeira nota: ")
      leia(num1)
      escreva ("Digite a segunda nota: ")
      leia(num2)
    //processamento    
      media = (num1+num2)/2
    //saída  
      escreva("A média é: ", media)

  }
}
